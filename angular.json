{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "mphfe": {
      "root": "",
      "sourceRoot": "app/extension/",
      "projectType": "application",
      "prefix": "mph",
      "schematics": {
        "@schematics/angular:component": {
          "style": "sass"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/mphfe",
            "index": "app/extension/index.html",
            "main": "app/extension/main.ts",
            "polyfills": "app/extension/polyfills.ts",
            "tsConfig": "app/extension/tsconfig.app.json",
            "assets": [
              "app/extension/favicon.ico",
              "app/extension/assets",
              "app/extension/pool-scripts",
              "app/extension/manifest.json"
            ],
            "styles": [
              "app/extension/styles.scss"
            ],
            "scripts": [],
            "es5BrowserSupport": true
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "app/extension/environments/environment.ts",
                  "with": "app/extension/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "mphfe:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "mphfe:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "mphfe:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "app/extension/test.ts",
            "polyfills": "app/extension/polyfills.ts",
            "tsConfig": "app/extension/tsconfig.spec.json",
            "karmaConfig": "app/extension/karma.conf.js",
            "styles": [
              "app/extension/styles.scss"
            ],
            "scripts": [],
            "assets": [
              "app/extension/favicon.ico",
              "app/extension/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "app/extension/tsconfig.app.json",
              "app/extension/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "mphfe-e2e": {
      "root": "e2e/",
      "projectType": "application",
      "prefix": "",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "mphfe:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "mphfe:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "e2e/tsconfig.e2e.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "mphfe"
}