{
  "manifest_version": 2,
  "name": "MPH",
  "version": "0.3.0",
  "permissions": [
    "tabs",
    "notifications",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/",
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ],
  "background": {
    "page": "index.html#/background",
    "persistent": false
  },
  "browser_action": {
    "default_title": "Pool hopping",
    "default_popup": "index.html#/"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}